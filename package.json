{
  "name": "fue-controller-monorepo",
  "version": "1.0.0",
  "description": "FUE Hair Transplant Micro Motor Control Unit Project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install --workspaces --if-present",
    "build": "tsc -b packages/backend && npm run build --workspace=frontend",
    "dev": "npx concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "start": "npm run build && npm start --workspace=backend",
    "start-only": "npm start --workspace=backend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/progesor/FUE_Controller.git"
  },
  "keywords": [],
  "author": "Progesor",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/progesor/FUE_Controller/issues"
  },
  "homepage": "https://github.com/progesor/FUE_Controller#readme",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
